<%= form_with url: predictions_path, method: 'post', local: true do |f| %>
  <%= f.label :message, 'Message:' %>
  <%= f.text_field :message %>
  <%= f.submit 'Get Prediction' %>
<% end %>

<% if @reve.present? %>
  <p>Reve: <%= @reve %></p>
<% end %>

<% if @prediction.present? %>
  <p>Prediction: <%= @prediction %></p>
<% end %>
